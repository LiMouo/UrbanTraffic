<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <top.codepy.urbantraffic.ToolsCatalog.ToolbarMaster
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40sp"
            android:textColor="#000"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="单号出行车辆 :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/carId_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/show_money"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="1"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/carId_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/show_money"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="2"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/carId_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/show_money"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="3"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20sp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="出行车辆设置: "
                android:textColor="#000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小车编号: 1 号"
                    android:textSize="16sp" />

                <ToggleButton
                    android:id="@+id/tog_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#00000000"
                    android:drawableRight="@drawable/account_message_select"
                    android:textOff="@null"
                    android:textOn="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小车编号: 2 号"
                    android:textSize="16sp" />

                <ToggleButton
                    android:id="@+id/tog_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#00000000"
                    android:drawableRight="@drawable/account_message_select"
                    android:textOff="@null"
                    android:textOn="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小车编号: 3 号"
                    android:textSize="16sp" />

                <ToggleButton
                    android:id="@+id/tog_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#00000000"
                    android:drawableRight="@drawable/account_message_select"
                    android:textOff="@null"
                    android:textOn="@null" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="260dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/trip_xml"
                android:gravity="center"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/text_red"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/tirp_togglebutton_red"
                    android:checked="true"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/text_yellow"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/tirp_togglebutton_yellow"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/text_green"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/tirp_togglebutton_green"
                    android:textOff="@null"
                    android:textOn="@null" />

            </LinearLayout>

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>